# ========================================
# Переменные окружения для Neuro Store
# ИЗМЕНИТЕ СЕКРЕТНЫЕ КЛЮЧИ ПЕРЕД ЗАПУСКОМ!
# ========================================

# Настройки приложения
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=true

# БЕЗОПАСНОСТЬ - Рабочие ключи для разработки
JWT_SECRET=neuro_store_jwt_secret_key_2024_development_32_chars_min
SECRET_KEY=neuro_store_app_secret_key_2024_development_32_chars_min
ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_EXPIRE_MINUTES=60
ALGORITHM=HS256

# База данных PostgreSQL
POSTGRES_DB=neuro_store
POSTGRES_USER=neuro_user
POSTGRES_PASSWORD=neuro_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# URL для подключения к базе данных
DATABASE_URL=postgresql://neuro_user:neuro_password@localhost:5433/neuro_store
DATABASE_URL_ASYNC=postgresql+asyncpg://neuro_user:neuro_password@localhost:5433/neuro_store

# Redis для кэширования и rate limiting
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Rate Limiting настройки
RATE_LIMIT_DEFAULT=20/minute
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_REGISTER=3/minute
RATE_LIMIT_PRODUCTS=30/minute
RATE_LIMIT_SUBSCRIPTIONS=10/minute

# Кэширование
CACHE_TTL_SECONDS=120
CACHE_TTL_PRODUCTS=300
CACHE_TTL_PLANS=600

# API настройки
API_V1_STR=/api/v1
PROJECT_NAME=Neuro Store API
PROJECT_VERSION=1.0.0
PROJECT_DESCRIPTION=API для магазина подписок на нейросетевые сервисы

# CORS настройки
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@neurostore.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Frontend
NEXT_PUBLIC_API_BASE=http://localhost:8000
NEXT_PUBLIC_ENVIRONMENT=development

# Тестирование
TEST_DATABASE_URL=postgresql://neuro_user:neuro_password@localhost:5433/neuro_store_test
TEST_REDIS_URL=redis://localhost:6379/1
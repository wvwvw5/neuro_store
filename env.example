# Настройки базы данных
DATABASE_URL=postgresql://postgres:password@localhost:5432/neuro_store
DATABASE_URL_ASYNC=postgresql+asyncpg://postgres:password@localhost:5432/neuro_store

# Настройки PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=neuro_store
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Настройки FastAPI
API_V1_STR=/api/v1
PROJECT_NAME=Neuro Store API
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Настройки безопасности
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Настройки pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@neurostore.com
PGADMIN_DEFAULT_PASSWORD=admin

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=json

# Настройки Redis (если используется для кэширования)
REDIS_URL=redis://localhost:6379/0

# Настройки внешних API
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_API_URL=https://api.payment-provider.com

# ========================================
# Переменные окружения для Neuro Store
# ========================================

# База данных PostgreSQL
POSTGRES_DB=neuro_store
POSTGRES_USER=neuro_user
POSTGRES_PASSWORD=neuro_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# URL для подключения к базе данных
DATABASE_URL=postgresql://neuro_user:neuro_password@localhost:5432/neuro_store
DATABASE_URL_ASYNC=postgresql+asyncpg://neuro_user:neuro_password@localhost:5432/neuro_store

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# FastAPI настройки
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME=Neuro Store

# CORS настройки
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@neurostore.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=json

# Внешние API (для интеграции с нейросетями)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
STABILITY_API_KEY=your-stability-api-key

# Платежные системы
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Email настройки (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Мониторинг
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090
